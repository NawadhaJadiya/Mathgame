<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MathGame" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/sky_blue</item>
        <item name="colorSecondaryVariant">@color/sky_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name = "android:statusBarColor" tools:targetApi = "l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Game" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/plum</item>
        <item name="colorPrimaryVariant">@color/plum</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/sky_blue</item>
        <item name="colorSecondaryVariant">@color/sky_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name = "android:statusBarColor" tools:targetApi = "l">?attr/colorPrimaryVariant</item>
        <item name="actionBarStyle">@style/ActionBarCustomStyle</item>


        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

<!--    <&#45;&#45; AppCompat Theme for LastActivity &ndash;&gt;-->
    <style name="Theme.AppCompatLastActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/plum</item>
        <item name="colorPrimaryDark">@color/plum</item>
        <item name="colorAccent">@color/sky_blue</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
    </style>



    <style name="ActionBarCustomStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/plum</item>

    </style>

    <style name="Theme.MathGame" parent="Base.Theme.MathGame" />
</resources>